@model Course
@{
  ViewData["Title"] = "Edit Course";
}

<div class="form-container fade-in-up">
  <div class="form-header">
    <h1>Edit Course</h1>
    <h4>Update course information</h4>
  </div>

  <form asp-controller="Course" asp-action="SaveEdit" method="post" class="form-section">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label asp-for="Name" class="form-label">Course Name</label>
          <input asp-for="Name" class="form-control" required />
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label asp-for="Degree" class="form-label">Degree</label>
          <input asp-for="Degree" class="form-control" required />
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label asp-for="MinDegree" class="form-label">Minimum Degree</label>
          <input asp-for="MinDegree" class="form-control" required />
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label asp-for="Hours" class="form-label">Hours</label>
          <input asp-for="Hours" class="form-control" required />
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label asp-for="Department" class="form-label">Department</label>
          <select asp-for="DepartmentId"
                  class="form-select"
                  asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
            <option value="0">Select Department</option>
          </select>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-submit">
        Save Changes
      </button>
      <a asp-controller="Course" asp-action="Index" class="btn btn-cancel">
        Back to List
      </a>
    </div>
  </form>
</div>
