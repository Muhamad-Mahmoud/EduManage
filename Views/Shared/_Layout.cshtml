<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - EduManage</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Local Styles -->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/views.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/EduManage.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Enhanced Header -->
<header>
        @{
            await Html.RenderPartialAsync("_NavPartial");
         }
</header>

  <!-- Enhanced Main Content -->
  <main role="main" class="flex-grow-1">
    <div class="container">
      <!-- Success/Error Messages -->
      @if (TempData["SuccessMessage"] != null)
      {
          <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
              <i class="fas fa-check-circle me-2"></i>
              @TempData["SuccessMessage"]
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      }
      
      @if (TempData["ErrorMessage"] != null)
      {
          <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
              <i class="fas fa-exclamation-circle me-2"></i>
              @TempData["ErrorMessage"]
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      }
      
      <!-- Page Content -->
      @RenderBody()
    </div>
  </main>

    <!-- Enhanced Footer -->
    <footer class="mt-auto">
        @{
            await Html.RenderPartialAsync("FooterPartial");
        }
    </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  
  <script>
    // Enhanced functionality
    function showContactInfo() {
      alert("Contact us at: info@edumanage.com");
    }
    
    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
      var alerts = document.querySelectorAll(".alert");
      alerts.forEach(function(alert) {
        var bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
      });
    }, 5000);
  </script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
