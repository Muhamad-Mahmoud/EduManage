@model MVC02.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="auth-container fade-in-up">
    <div class="auth-header">
        <h1>Login</h1>
        <h4>Access Your Account</h4>
    </div>

    <form asp-action="SaveLogin" class="auth-form">
        <div asp-validation-summary="ModelOnly" class="validation-error"></div>
        
        <div class="form-group">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="UserName" class="validation-error"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>
        
        <div class="form-check">
            <input class="form-check-input" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe">
                Remember me
            </label>
        </div>
        
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>

    <div class="auth-links">
        <a asp-action="Register">Don't have an account? Create one</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
