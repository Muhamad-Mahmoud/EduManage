@model InstructorWithCrsListViewModel
@{
  ViewData["Title"] = "Instructor List";
}

<div class="data-container fade-in-up">
  <!-- Header -->
  <div class="data-header">
    <h2>Instructor List</h2>
    <a asp-controller="Instructor" asp-action="Add" class="add-btn">
      Add New Instructor
    </a>
  </div>

  <!-- Search Bar -->
  @using (Html.BeginForm("Index", "Instructor", FormMethod.Get, new { @class = "search-container", novalidate = "novalidate" }))
  {
    <div class="search-form">
      <label for="searchInput" class="form-label visually-hidden">Search Instructors</label>
      <div class="search-input-group">
        @Html.TextBox(
               "search",
               ViewBag.Search as string,
               new
               {
                 @class = "form-control",
                 placeholder = "Search by name or department",
                 @id = "searchInput",
                 aria_label = "Search instructors",
                 minlength = "2",
                 required = "required"
               })
        <button type="submit" class="btn btn-primary">
          Search
        </button>
      </div>
      <div class="search-help-text">Enter at least 2 characters to search.</div>
    </div>
  }

  
  <!-- Instructor Table -->
  <div class="data-table">
    <table class="table table-hover text-center align-middle">
      <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Instructor Name</th>
          <th scope="col">Address</th>
          <th scope="col">Salary</th>
          <th scope="col">Course</th>
          <th scope="col">Department</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody id="instructorTableBody">
        @foreach (var instructor in Model.InstructorList)
        {
          <tr>
            <td>
              @if (!string.IsNullOrEmpty(instructor.ImageURL))
              {
                <img src="/Images/@instructor.ImageURL" alt="Photo of @instructor.Name" style="height:60px; border-radius: 50%; object-fit: cover;" />
              }
              else
              {
                <div style="height:60px; width:60px; background: #f8f9fa; border: 2px dashed #dee2e6; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #6c757d; font-size: 0.75rem;">
                  No Photo
                </div>
              }
            </td>
            <td>@instructor.Name</td>
            <td>@instructor.Address</td>
            <td>@String.Format("{0:C}", instructor.Salary)</td>
            <td>@instructor.Course?.Name</td>
            <td>@instructor.Department?.Name</td>
            <td>
              <div class="action-buttons">
                <a asp-action="Details"
                   asp-controller="Instructor"
                   asp-route-id="@instructor.Id"
                   class="btn-details"
                   aria-label="Details instructor @instructor.Name">
                  Details
                </a>
                <a asp-action="Edit"
                   asp-controller="Instructor"
                   asp-route-id="@instructor.Id"
                   class="btn-edit"
                   aria-label="Edit @instructor.Name">
                  Edit
                </a>
                <button type="button"
                        class="btn-delete delete-btn"
                        data-id="@instructor.Id"
                        data-name="@instructor.Name"
                        aria-label="Delete @instructor.Name">
                  Delete
                </button>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>

  @if (!Model.InstructorList.Any())
  {
    <div class="empty-state">
      <div class="empty-state-icon">👨‍🏫</div>
      <p class="empty-state-text">No instructors found.</p>
    </div>
  }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete "<strong id="instructorName"></strong>"?
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        @using (Html.BeginForm("Delete", "Instructor", FormMethod.Post, new { id = "deleteForm" }))
        {
          @Html.AntiForgeryToken()
          @Html.Hidden("id", "", new { @id = "deleteId" })
          <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
        }
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const deleteModalEl = document.getElementById('deleteModal');
      const deleteModal = new bootstrap.Modal(deleteModalEl);
      const nameDisplay = document.getElementById('instructorName');
      const idInput = document.getElementById('deleteId');
      const deleteForm = document.getElementById('deleteForm');
      const confirmBtn = document.getElementById('confirmDeleteBtn');

      // Client-side search filter
      document.getElementById('searchInput').addEventListener('input', function () {
        const value = this.value.toLowerCase();
        document.querySelectorAll('#instructorTableBody tr').forEach(row => {
          const name = row.cells[1].textContent.toLowerCase();
          const address = row.cells[2].textContent.toLowerCase();
          const department = row.cells[5].textContent.toLowerCase();
          row.style.display = (name.includes(value) || address.includes(value) || department.includes(value)) ? '' : 'none';
        });
      });

      // Show delete modal
      document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', () => {
          nameDisplay.textContent = button.dataset.name;
          idInput.value = button.dataset.id;
          deleteModal.show();
        });
      });

      // Disable delete button on submit
      deleteForm.addEventListener('submit', () => {
        confirmBtn.disabled = true;
      });
    });
  </script>
}
